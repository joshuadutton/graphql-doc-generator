{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2016",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "types": [
            "mocha",
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
